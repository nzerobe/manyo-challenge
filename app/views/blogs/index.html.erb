<h1>List of Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Contents</th></th>
  </tr>


<%= link_to "Expiration", blogs_path(sort_expired: "true"), class: 'btn btn-outline-warning btn-sm' %>
<% byebug %>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= blog.deadline %></td>
   <td><%= link_to 'Check the details', blog_path(blog.id) %></td>
   
  
    <td><%= link_to link_to "Edit this duff", edit_blog_path(blog.id) %></td>
    <td><%= link_to link_to 'Delete this duff', blog_path(blog.id), method: :delete ,data: {confirm: 'Are you sure?'} %></td>
    
  </tr>
<% end %>
 
</table>

<br>
<%= link_to 'New Post', new_blog_path %>
<%= t('blog.index') %>